<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.NewsFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size_20dp"
        android:layout_marginTop="@dimen/size_20dp"
        app:cardCornerRadius="@dimen/size_12dp"
        app:cardElevation="@dimen/size_12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_20dp"
                android:layout_marginTop="@dimen/size_20dp"
                android:gravity="center_horizontal"
                android:text="@string/news1"
                android:textColor="@color/red"
                android:textSize="@dimen/text_16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_20dp"
                android:layout_marginTop="@dimen/size_20dp"
                android:text="@string/news1_desc" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_news1_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/size_20dp"
                android:layout_marginBottom="@dimen/size_20dp"
                android:backgroundTint="@color/red"
                android:text="@string/more"
                android:textSize="@dimen/text_13sp"
                app:cornerRadius="@dimen/size_12dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size_20dp"
        android:layout_marginTop="@dimen/size_20dp"
        app:cardCornerRadius="@dimen/size_12dp"
        app:cardElevation="@dimen/size_12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_20dp"
                android:layout_marginTop="@dimen/size_20dp"
                android:gravity="center_horizontal"
                android:text="@string/news2"
                android:textColor="@color/red"
                android:textSize="@dimen/text_16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_20dp"
                android:layout_marginTop="@dimen/size_20dp"
                android:text="@string/news1_desc" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_news2_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/size_20dp"
                android:layout_marginBottom="@dimen/size_20dp"
                android:backgroundTint="@color/red"
                android:text="@string/more"
                android:textSize="@dimen/text_13sp"
                app:cornerRadius="@dimen/size_12dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>